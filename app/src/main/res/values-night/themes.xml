<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <item name="backgroundImage" type="drawable">@drawable/background_night</item>

    <!-- Custom style for the Spinner items -->
    <style name="SpinnerItemStyle">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <item name="customBlack" type="color">@color/white</item>
    <item name="alwaysBlack" type="color">@color/black</item>


    <item name="colorPrimary" type="color">@color/primary_dark</item>
    <item name="colorPrimaryVariant" type="color">@color/primary_dark_variant</item>
    <item name="colorOnPrimary" type="color">@color/on_primary_dark</item>
    <item name="colorSecondary" type="color">@color/secondary_dark</item>
    <item name="colorSecondaryVariant" type="color">@color/secondary_dark_variant</item>
    <item name="colorOnSecondary" type="color">@color/on_secondary_dark</item>


    <style name="Theme.ViajaPlus" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_dark_variant</item>
        <item name="colorOnPrimary">@color/on_primary_dark</item>
        <item name="colorSecondary">@color/secondary_dark</item>
        <item name="colorSecondaryVariant">@color/secondary_dark_variant</item>
        <item name="colorOnSecondary">@color/on_secondary_dark</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    </style>
  <!-- Base application theme. -->
    <style name="Base.Theme.ViajaPlus" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>
</resources>